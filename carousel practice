    <script>
        // Carousel functionality
        const slides = document.querySelectorAll('.carousel-slide');
        let currentSlide = 0;

        function nextSlide() {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }

        // Change slide every 2 seconds
        setInterval(nextSlide, 2000);

        // Booking panel functionality
        document.querySelectorAll('.date').forEach(date => {
            date.addEventListener('click', function() {
                document.querySelector('.date.active')?.classList.remove('active');
                this.classList.add('active');
            });
        });

        // Person counter
        const counterBtns = document.querySelectorAll('.counter-btn');
        const counterValue = document.querySelector('.counter-value');
        
        counterBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                let value = parseInt(counterValue.textContent);
                if (this.textContent === '+') {
                    counterValue.textContent = Math.min(value + 1, 10);
                } else {
                    counterValue.textContent = Math.max(value - 1, 1);
                }
            });
        });
    </script>
